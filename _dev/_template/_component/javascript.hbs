<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/TweenMax.min.js"></script>
<script src="/common/lib/slick/slick.min.js"></script>
<script>
	$(document).ready(function(){
		
		var windowHeight = $(window).height();
		var windowWidth = $(window).width();
		var containerHeight = windowHeight;
		var boxHeight= Math.sqrt((windowHeight * windowHeight)/2);
		if(windowWidth < windowHeight){
			boxHeight = Math.sqrt((windowWidth * windowWidth)/2);
			containerHeight= windowWidth;
		}
		var boxMarginLeft = boxHeight/2;
		var box = $("#navigation-box");
		$("#navigation-box").height(boxHeight);
		$("#navigation-box").width(boxHeight);
		$("#navigation-box").css('left',- boxMarginLeft);
		$('.navigation-container').height(containerHeight);

	    var tl = new TimelineLite({delay:0,paused:true});

		tl.to(box, 0.3, {x: boxMarginLeft, y:0, scale:1.2,rotation:-20 ,ease:Power1.easeIn},"sequence")
		.to(box, 0.5, {rotation:0,scale:1,x:0,top:0,
						right:0,
						bottom:0,
						left:0,
						width: boxHeight,height: boxHeight, ease:Power2.easeIn,
						onComplete: function(){
							$('.navigation-right').removeClass('hiddenNav');
							$('.navigation-container').addClass('showNav');
						}},"sequence");

		$('.open-navigation').click(function(){
			tl.play();
			
		});
		$('.close-navigation').click(function(){
			$('.navigation-right').addClass('hiddenNav');
			$('.navigation-container').removeClass('showNav');
			$("#navigation-box").height(boxHeight);
			$("#navigation-box").width(boxHeight);
			tl.reverse();
		});
		$(window).resize(function(){
			windowHeight = $(window).height();	
			windowWidth = $(window).width();
			containerHeight = windowHeight;
			boxHeight= Math.sqrt((windowHeight * windowHeight)/2);
			if(windowWidth < windowHeight){
				boxHeight = Math.sqrt((windowWidth * windowWidth)/2);
				containerHeight = windowWidth;
			}
			boxMarginLeft = boxHeight/2;
			box = $("#navigation-box");
			$("#navigation-box").height(boxHeight);
			$("#navigation-box").width(boxHeight);
			$("#navigation-box").css('left',- boxMarginLeft);
			if($(window).width() < 992){

			}else{
				$('.navigation-container').height(containerHeight);
			}
			
		});


		$('.slider').slick({responsive: [
			{
			breakpoint: 768,
			settings: {
				slidesToShow: 1
			}
			},
			{
			breakpoint: 480,
			settings: {
				slidesToShow: 1
			}
			}
		]});

	})
	
</script>
