{{#each this}}
  <article class="clients {{#if card-modifier}}clients--{{card-modifier}}{{/if}}">
    <a class="clients__image {{#if background-modifier}}clients__image--{{background-modifier}}{{/if}}" href="{{link}}" style="background-image: url('/common/images/share/{{image}}');">
      <span class="clients__overlay"></span>

      <div class="clients__body {{#if body-modifier}}clients__body--{{body-modifier}}{{/if}}">
        <h3 class="clients__title">{{title}}</h3>
        {{#compare btn "==" "true"}}
          <span class="clients__btn">Learn More<span class="btn__arrow"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25.4 10.93"><defs><style>.cls-1,.cls-2{stroke:#fff;fill:#fff;stroke-miterlimit:10;}.cls-1{stroke-width:2px;}</style></defs><title>Arrow</title><g id="Layer_2" data-name="Layer 2"><g id="Layer_1-2" data-name="Layer 1"><line class="cls-1" y1="5.47" x2="17.67" y2="5.47"/><polygon class="cls-2" points="18.16 9.97 18.16 0.97 24.53 5.47 18.16 9.97"/></g></g></svg></span></span>
        {{/compare}}
      </div>
    </a>
  </article>
{{/each}}
